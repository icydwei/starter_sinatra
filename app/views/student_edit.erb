<h2>Edit Student Account </h2>

<form action="/students/<%= @student.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <label for="name">Full Name: </label>
    
    <input type="text" name="name" value="<%=@student.name%>">
    <br>

    <p>Modify student schedule by adding or removing courses below: </p>
        
        <% @courses.each do |course| %>

            <input type="checkbox" name="course_ids[]" id="<%=course.id%>" value="<%=course.id%>"<%='checked' if @student.course_ids.include?(course.id) %>><%= course.name %><br></input>
        <% end %>

        <input type="submit" value="Save Changes!">
</form>

<br>

